html
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, viewport-fit=cover')
    title Games RODO

    // Google Font
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Londrina+Solid:wght@300;900&family=Press+Start+2P&display=swap' rel='stylesheet')

    // bootstrap
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')

    // bootstrap icons
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css')
    link(rel='shortcut icon' href='./public/images/controller.svg')

    // estilos de boootstrap
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css')
    style.
        body {
        padding-top: 0px;
        }
body 
    header
        nav.bg-primary.navbar.navbar-expand-lg.navbar-light.bg-primary.bg-info
            .d-flex
                a.navbar-brand.text-white(style="font-family: 'Press Start 2P'" href='/') RODO Games
            div
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link(href='/') Inicio
                    li.nav-item
                        a.nav-link(href='/productos') Productos

    .row.m-0
        .col-sm-3.p-0.text-center
            .jumbotron(style='height: 100%')
                h3 Los mejores juegos en un solo lugar
                i.bi.bi-controller.fs-1
        .col-sm-9
            .well
                h1.text-center.py-4 Listado de productos
            if products.length
                table.table
                    thead.table-dark
                        tr
                            th.col-sm-6(scope='col') Nombre
                            th.col-sm-3(scope='col') Precio
                            th.col-sm-3(scope='col') Foto
                    tbody
                        each product in products
                            tr
                                td= product.title
                                td= product.price
                                td 
                                    img(style='border-radius: 8%; width: 35%; border: solid 1px' src=product.thumbnail)
            else
                h2.text-center.py-5  - No se encontraron productos - 

    .d-flex.justify-content-around.fs-1.m-4
        i.bi.bi-xbox
        i.bi.bi-playstation
        i.bi.bi-nintendo-switch

    footer.jumbotron.m-0.p-1
        .fs-1.px-5.text-end
            a.text-decoration-none.text-dark(aria-label='Instagram' href='')
                i.bi.bi-instagram(width='25' height='25')  
            a.text-decoration-none.text-dark(aria-label='Facebook' href='')
                i.bi.bi-facebook(width='25' height='25')
            a.text-decoration-none.text-dark(aria-label='Twitter' href='')
                i.bi.bi-twitter(width='25' height='25')
        .text-center
